<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:itemTextAppearance">@style/itemTextColor</item>
    </style>

    <style name="itemTextColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="toolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:actionMenuTextColor">@color/textColorHint</item>
    </style>

</resources>
