<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:padding="16dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/project_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOMAReport"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textHeadline"/>

        <TextView
            android:id="@+id/project_card_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_card_title"
            android:text="6기 1단계 1차"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/textSubhead"/>

        <RelativeLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/project_card_stage"
            android:layout_marginTop="16dp"
            android:background="@color/colorDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/divider"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/project_card_mentor"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="8dp"/>

            <RelativeLayout
                android:id="@+id/mentor_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:id="@+id/project_card_mentee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>