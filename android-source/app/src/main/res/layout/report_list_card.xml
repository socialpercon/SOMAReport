<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:padding="16dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/report_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#20150808"
            android:textColor="@color/textColorTitle"
            android:textSize="@dimen/textHeadline"/>

        <TextView
            android:id="@+id/report_card_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/report_card_title"
            android:text="안드로이드가생소하다"
           android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/textSubhead"/>

        <RelativeLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/report_card_topic"
            android:layout_marginTop="16dp"
            android:background="@color/colorDivider"/>

        <LinearLayout
            android:id="@+id/report_card_attendee"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/divider"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="작성중"
            android:textColor="@color/textColorPrimaryLight"
            android:id="@+id/textView"
            android:background="#66C4DE"
            android:layout_above="@+id/report_card_topic"
            android:layout_alignEnd="@+id/divider" />
    </RelativeLayout>
</android.support.v7.widget.CardView>